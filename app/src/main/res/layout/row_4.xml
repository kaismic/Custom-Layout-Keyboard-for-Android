<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_4_height"
    android:gravity="center">

    <Button
        android:id="@+id/special_key"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="!@#"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/comma"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:text=","
        />
    <Button
        android:id="@+id/spacebar"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:text="@string/spacebar_text_english"
        />
    <Button
        android:id="@+id/full_stop"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:text="."
        />
    <Button
        android:id="@+id/return_key"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:textSize="@dimen/return_key_text_size"
        android:text="@string/return_key_symbol"
        />
</LinearLayout>