<resources>
    <style name="Theme.KeyboardBackground" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/light_theme_bg</item>
    </style>

    <style name="Theme.LetterBtn" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ControlBtn" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/light_theme_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Theme.TransparentBackground" parent="Widget.AppCompat.PopupWindow">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.PreviewPopupTextView" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>